@model SistemaAgenciaTours.Models.Usuario

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login - Agencia Tours</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">

                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="~/img/logo escalante tours.png" class="brand_logo" alt="Logo" />
                    </div>
                </div>

                <div class="d-flex justify-content-center form_container">
                    <form asp-action="Login" asp-controller="Acceso" method="post">

                        
                        @Html.ValidationSummary(false, "", new { @class = "text-danger text-center mb-2" })

                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input asp-for="Correo" class="form-control input_user" placeholder="Correo" />
                        </div>
                        <span asp-validation-for="Correo" class="text-danger mb-2"></span>

                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Clave" type="password" class="form-control input_pass" placeholder="Contraseña" />
                        </div>
                        <span asp-validation-for="Clave" class="text-danger mb-2"></span>

                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button type="submit" class="btn login_btn">Iniciar Sesión</button>
                        </div>
                    </form>
                </div>

                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        ¿Aún no estás registrado? <a class="ml-2" asp-action="Registrar" asp-controller="Acceso">Registrarse</a>
                    </div>
                </div>

                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-warning text-center mt-3">
                        @ViewData["Mensaje"]
                    </div>
                }

            </div>
        </div>
    </div>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
