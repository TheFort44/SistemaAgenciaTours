@model SistemaAgenciaTours.Models.ToursViewModel

@{
    ViewData["Title"] = "Crear Tour";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Crear" method="post">
    <div class="form-group mb-3">
        <label asp-for="NombreTour"></label>
        <input asp-for="NombreTour" class="form-control" />
        <span asp-validation-for="NombreTour" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PaisID"></label>
        <select asp-for="PaisID" class="form-control" asp-items="ViewBag.Paises">
            <option value="">-- Seleccione un país --</option>
        </select>
        <span asp-validation-for="PaisID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DestinoID"></label>
        <select asp-for="DestinoID" class="form-control" asp-items="ViewBag.Destinos">
            <option value="">-- Seleccione un destino --</option>
        </select>
        <span asp-validation-for="DestinoID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Hora"></label>
        <input asp-for="Hora" type="time" class="form-control" />
        <span asp-validation-for="Hora" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ITBIS"></label>
        <input asp-for="ITBIS" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="ITBIS" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="IndexAdministrador" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
