@model IEnumerable<SistemaAgenciaTours.Models.ToursViewModel>


@{
    ViewData["Title"] = "Tours Disponibles";
}

<h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="bg-dark text-white">
        <tr>
            <th>Tour</th>
            <th>País</th>
            <th>Destino</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Precio</th>
            <th>ITBIS (18%)</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model)
        {
            <tr>
                <td>@tour.NombreTour</td>
                <td>@tour.NombrePais</td>
                <td>@tour.NombreDestino</td>
                <td>@tour.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@DateTime.Today.Add(tour.Hora).ToString("hh:mm tt")</td>
                <td>@tour.Precio.ToString("C", new System.Globalization.CultureInfo("es-DO"))</td>
                <td>@tour.ITBIS?.ToString("C", new System.Globalization.CultureInfo("es-DO"))</td>
                <td>
                    @if (tour.Estado == "Activo")
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@tour.Estado</span>
                    }
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <form asp-action="Editar" asp-controller="Tours" method="get">
                            <input type="hidden" name="id" value="@tour.TourID" />
                            <button type="submit" class="btn btn-sm btn-warning">Editar</button>
                        </form>

                        <form asp-action="Eliminar" asp-controller="Tours" method="get">
                            <input type="hidden" name="id" value="@tour.TourID" />
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Tours" asp-action="Crear" class="btn btn-success">Agregar Tour</a>
</div>