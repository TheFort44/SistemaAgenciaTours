@model IEnumerable<SistemaAgenciaTours.Models.ToursViewModel>

@{
    ViewData["Title"] = "Tours Disponibles";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Tour</th>
            <th>País</th>
            <th>Destino</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Precio</th>
            <th>ITBIS (18%)</th>
            <th>Duración (días)</th>
            <th>Estado</th>
            <th>Imagen</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model)
        {
            <tr>
                <td>@tour.NombreTour</td>
                <td>@tour.NombrePais</td>
                <td>@tour.NombreDestino</td>
                <td>@tour.Fecha.ToString("yyyy-MM-dd")</td>
                <td>@tour.Hora.ToString(@"hh\:mm")</td>
                <td>@tour.Precio.ToString("C")</td>
                <td>@tour.ITBIS.ToString("C")</td>
                <td>@tour.DuracionDias</td>
                <td>@tour.Estado</td>
                <td>
                    @if (!string.IsNullOrEmpty(tour.ImagenRuta))
                    {
                        <img src="@tour.ImagenRuta" alt="Imagen del Tour" width="100" />
                    }
                </td>
                <td>
                    <form asp-action="AgregarAlCarrito" asp-controller="Tours" method="post">
                        <input type="hidden" name="id" value="@tour.TourID" />
                        <button type="submit" class="btn btn-sm btn-primary">Agregar al carrito</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
