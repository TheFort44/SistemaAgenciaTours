@model IEnumerable<SistemaAgenciaTours.Models.ToursViewModel>

@{
    ViewData["Title"] = "Mi Carrito de Tours";
    var total = Model.Sum(t => t.Precio + (t.ITBIS ?? 0));
}

<link href="~/css/carrito.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center text-primary mb-5">🛒 @ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No tienes tours en el carrito todavía.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var tour in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100">
                        <img src="@tour.ImagenRuta" alt="Imagen del Tour" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@tour.NombreTour</h5>
                            <p class="card-text mb-1"><strong>País:</strong> @tour.NombrePais</p>
                            <p class="card-text mb-1"><strong>Destino:</strong> @tour.NombreDestino</p>
                            <p class="card-text mb-1"><strong>Fecha:</strong> @tour.Fecha.ToString("dd/MM/yyyy")</p>
                            <p class="card-text mb-1"><strong>Hora:</strong> @DateTime.Today.Add(tour.Hora).ToString("hh:mm tt")</p>
                            <p class="card-text mb-1"><strong>Precio:</strong> @tour.Precio.ToString("C", new System.Globalization.CultureInfo("es-DO"))</p>
                            <p class="card-text mb-1"><strong>ITBIS:</strong> @tour.ITBIS?.ToString("C", new System.Globalization.CultureInfo("es-DO"))</p>
                            <p class="card-text mb-3">
                                <strong>Estado:</strong>
                                @if (tour.Estado == "Activo")
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@tour.Estado</span>
                                }
                            </p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <form asp-action="EliminarDelCarrito" asp-controller="Tours" method="post" class="m-0">
                                    <input type="hidden" name="id" value="@tour.TourID" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Quitar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-5 text-end">
            <h4>Total a pagar: <span class="text-success fw-bold">@total.ToString("C", new System.Globalization.CultureInfo("es-DO"))</span></h4>
            <button class="btn btn-primary mt-3" onclick="alert('🛠 Esta función aún está en desarrollo.')">Pagar</button>
        </div>
    }
</div>
